# PostgreSQL Database Configuration
POSTGRES_DB=lbrpdb
POSTGRES_USER=test
POSTGRES_PASSWORD=changeme
POSTGRES_HOST=postgres

# MQTT Configuration
MQTT_BROKER=mqtt-broker
MQTT_PORT=1883

# Updated MQTT Topics
MQTT_TOPIC=client/{client_id}/session/{session_id}/
MQTT_RESULTS_TOPIC=results/client/{client_id}/session/{session_id}/

# GTFS (choose operator + your real keys)
GTFS_OPERATOR=sl
GTFS_STATIC_KEY=YOUR-GTFS-API-KEY
GTFS_RT_KEY=YOUR-GTFS-RT-API-KEY

# Explicit URLs (recommended in prod so behavior is deterministic)
GTFS_URL=https://opendata.samtrafiken.se/gtfs/sl/sl.zip?key=GTFS_STATIC_KEY
GTFS_RT_SERVICE_ALERTS=https://opendata.samtrafiken.se/gtfs-rt/sl/ServiceAlerts.pb?key=GTFS_RT_KEY
GTFS_RT_TRIP_UPDATES=https://opendata.samtrafiken.se/gtfs-rt/sl/TripUpdates.pb?key=GTFS_RT_KEY
GTFS_RT_VEHICLE_POSITIONS=https://opendata.samtrafiken.se/gtfs-rt/sl/VehiclePositions.pb?key=GTFS_RT_KEY

# LBRP Application Configuration
LBRP_APP_HOST=lbrp-app
